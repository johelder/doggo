{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./*"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@lib": ["src/lib"],
      "@hooks": ["src/hooks"],
      "@providers": ["src/providers"],
      "@routes": ["src/routes"],
      "@screens": ["src/screens"],
      "@services": ["src/services"],
      "@theme": ["src/styles/theme"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    }
  }
}
